{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "tasks": {
    "dev": {
      "description": "開発用 dxeco-runner を起動する",
      "command": "deno run --watch --check -A ./dev.ts"
    },
    "lint": "deno lint",
    "test": "deno test -A",
    "compile": {
      "description": "実行ファイルを出力する",
      "command": "deno compile -A ./cli.ts"
    }
  }
}
